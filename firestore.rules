rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // User documents - allow all operations (simple auth system)
    match /users/{userId} {
      allow read, write: if true;
    }
    
    // Leaderboard - allow all reads and writes
    match /leaderboard/{entry} {
      allow read, write: if true;
    }
    
    // Global Stats (old system, kept for compatibility)
    match /stats/global {
      allow read, write: if true;
    }
    
    // Block all other paths
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
